{
  "name": "markmap-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for markmap.js.org integration - Generate interactive mindmaps from Markdown via Claude Code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "markmap-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markmap",
    "mindmap",
    "mcp",
    "model-context-protocol",
    "markdown",
    "visualization",
    "claude-code",
    "ai-tools"
  ],
  "author": "AutomateYourNetwork",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "markmap-lib": "^0.18.12",
    "markmap-view": "^0.18.12",
    "jsdom": "^25.0.1",
    "d3": "^7.9.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/jsdom": "^21.1.7",
    "@types/d3": "^7.4.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/automateyournetwork/markmap-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/automateyournetwork/markmap-mcp/issues"
  },
  "homepage": "https://github.com/automateyournetwork/markmap-mcp#readme"
